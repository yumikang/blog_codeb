{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": null,
  "regions": ["icn1"],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api",
      "has": [
        {
          "type": "host",
          "value": "(?<subdomain>tech|food|travel|lifestyle|business|health|sports|entertainment|science|education)\\.magzin\\.(?:com|vercel\\.app)"
        }
      ]
    },
    { "source": "/(.*)", "destination": "/api" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}